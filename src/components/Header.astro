<header class="border-b-4 border-cyan-500 bg-gray-900 sticky top-0 z-40">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <div class="flex items-center gap-3">
      <img
        src="/logo.png"
        alt="Logo WebDev"
        class="h-10 w-auto object-contain border border-pink-500 rounded bg-black/50 shadow-[0_0_10px_#ff00ff]"
      />
      <span class="pixel-font text-yellow-400 text-xs md:text-sm lg:text-base glow-text-pink">
        RETROVERSE
      </span>
    </div>
    
    <nav class="hidden md:flex gap-6 text-xl">
      <a href="#home" class="hover:text-cyan-400 transition-colors">INICIO</a>
      <a href="#arcade" class="hover:text-pink-500 transition-colors">ARCADE</a>
      <a href="#library" class="hover:text-green-400 transition-colors">JUEGOS</a>
    </nav>
    
    <button
      data-crt-toggle
      onclick="window.toggleCRT()"
      class="text-xs border-2 border-green-500 px-2 py-1 text-green-500 hover:bg-green-500 hover:text-black font-bold transition pixel-font"
    >
      CRT: ON
    </button>
  </div>
</header>